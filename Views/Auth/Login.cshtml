@using Thoughts.Dtos
@model LoginDtos
<style>
    .btn-personalized {
        background-color: white;
        font-weight: 600;
        transition: .3s;
    } 

    .btn-personalized:hover {
        background-color: #f57c00;
        border: 1px solid white;
        color: #fafafa;
    }
</style>
<div class="w-100 h-100 d-flex justify-content-center align-items-center">
    <div class="w-50 p-4 shadow rounded m-auto" style="background-color: #f57c00;">
        <div class="d-flex justify-content-center align-items-center">
            <img src="https://static.vecteezy.com/system/resources/previews/009/408/668/non_2x/light-bulb-transparent-free-png.png" class="w-25" alt="lÃ¢mpada">
            @* <h1 class="text-center p-3">Register</h1> *@
        </div>
        <form asp-action="Login" asp-controller="Auth" method="post">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email">
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="Senha">
                <label for="floatingPassword">Password</label>
            </div>
            <div class="d-flex justify-content-end pt-3">
                <button class="btn btn-personalized" type="submit">Login</button>
            </div>
        </form>
    </div>
</div>
